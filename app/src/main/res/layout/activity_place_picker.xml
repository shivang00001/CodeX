<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_place_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.example.shivang.codex.PlacePickerActivity"
    android:onClick="onPickPlace"
    android:background="#7d4c2f75"
    >

    <Button
        android:text="Pick a Place for meeting"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/button4"
        android:onClick="onPickPlace"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_35sdp"
        />

    <Button
        android:text="Pick Date"
        android:background="#f4f4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/button8"
        android:onClick="onPickDaTim"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_gravity="center"
        />
    <Button
        android:text="Pick Time"
        android:background="#f5f"
        android:onClick="onPickTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_gravity="center"
        android:id="@+id/button10"
        />

    <Button
        android:text="Send A Message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/button5"
        android:onClick="onMessageSend"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:onClick="onMeetProceed"
        android:text="Send"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_55sdp"/>

  </LinearLayout>
</ScrollView>