<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="5"

    tools:context="com.example.shivang.codex.AboutUs">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="2"
        >

        <ImageView
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:src="@drawable/my"
         android:layout_weight="1"
         android:paddingLeft="@dimen/_15sdp"
         android:paddingTop="@dimen/_20sdp"
        />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="DEVELOPER \nDESIGNER \nGENIUS  :D  \nLOVABLE  ;)"
            android:textColor="#000000"
            android:textSize="@dimen/_25sdp"
            android:id="@+id/about_us_text1"
            android:paddingTop="@dimen/_40sdp"
            android:paddingLeft="@dimen/_25sdp"

          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:weightSum="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Special thanks to Mr. Anonymous.\nHe is the hero that I needed but not the one I deserved.\nHe is the silent guardian,the watchful protector,THE DARK KNIGHT!!!"
            android:textSize="@dimen/_20sdp"
            android:layout_weight="4"
            android:id="@+id/about_us_text2"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Email id:shivang00001@gmail.com"
            android:textSize="@dimen/_20sdp"
            android:textColor="#000000"
            android:gravity="bottom"
            android:id="@+id/about_us_text3"

            />
    </LinearLayout>
</LinearLayout>
