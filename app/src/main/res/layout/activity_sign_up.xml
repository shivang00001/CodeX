<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/handshakenew">

    <TextView
        android:text="Name"
        android:textSize="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NametextView2"
        android:textAlignment="center"
        android:textColor="#424242"
        android:alpha="0.75"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="enter your name"
        android:textAlignment="center"
        android:id="@+id/name_editText4"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:alpha="0.5"
        android:background="@drawable/rounded_edit_text"/>

    <TextView
        android:text="Phone Number"
        android:textSize="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PhNumtextView2"
        android:textAlignment="center"
        android:textColor="#424242"
        android:alpha="0.75"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="enter phone number"
        android:textAlignment="center"
        android:id="@+id/phNumb_editText4"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:alpha="0.5"
        android:background="@drawable/rounded_edit_text"/>

    <TextView
        android:text="Email-ID"
        android:textSize="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"

        android:textAlignment="center"
        android:textColor="#424242"
        android:alpha="0.75"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="enter email id"
        android:textAlignment="center"
        android:id="@+id/editText4"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:alpha="0.5"
        android:background="@drawable/rounded_edit_text"/>


    <TextView
        android:text="Password"
        android:textSize="@dimen/_40sdp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#424242"
        android:alpha="0.75"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="enter password"
        android:textAlignment="center"
        android:id="@+id/editText6"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:alpha="0.5"
        android:background="@drawable/rounded_edit_text"/>

    <TextView
        android:text="Confirm Password"
        android:textSize="@dimen/_30sdp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#424242"
        android:alpha="0.75"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="confirm your password"
        android:id="@+id/editText8"
        android:textColorHint="#ccc"
        android:textColor="#fff"
        android:alpha="0.5"
        android:background="@drawable/rounded_edit_text"/>

    <Button
        android:text="Sign Up"
        android:onClick="signUpMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="#424242"
        android:textColor="#000000"
        android:alpha="0.75"
       />

    <TextView
        android:text="It's free and always will be...so much original huh!"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:textSize="@dimen/_15sdp"
        />


</LinearLayout>
