<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/drawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shivang.codex.FuncActivity">

    <LinearLayout
        android:id="@+id/activity_func"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="#66A5AD"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="horizontal">
            <Button
                android:text="Book a meet"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/_20sdp"
                android:id="@+id/button13"
                android:onClick="onMeetBook"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="#07575B"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/meet4"
                android:layout_weight="2"
                android:id="@+id/imageView"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:scaleType="fitEnd"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="horizontal"
            >
            <Button
                android:text="My Location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:id="@+id/button12"
                android:textSize="@dimen/_20sdp"
                android:onClick="onMyLoc"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="#07575B"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/mylocation2"
                android:layout_weight="2"
                android:id="@+id/imageView1"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:scaleType="fitEnd"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">


            <Button
                android:text="Import Contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="left"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:id="@+id/button14"
                android:onClick="onContactImp"
                android:background="#07575B"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/contacts"
                android:layout_weight="1"
                android:id="@+id/imageView2"
                android:layout_marginTop="@dimen/_55sdp"
                android:scaleType="fitEnd"
                android:layout_marginRight="@dimen/_10sdp"/>


        </LinearLayout>
    </LinearLayout>





</android.support.v4.widget.DrawerLayout>